<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.BookDetails">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="image" Aspect="AspectFit" />
            <Label x:Name="title" HorizontalTextAlignment="Center"/>
            <Label x:Name="Author" HorizontalTextAlignment="Center"/>
            <Button Text="To buy" Clicked="BuyToClick"/>
            <Label x:Name="Summary" HorizontalTextAlignment="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>